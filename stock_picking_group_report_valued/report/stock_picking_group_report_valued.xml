<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="valued_report_one_grouped_deliveryslip_picking" inherit_id="stock_picking_group.report_one_grouped_deliveryslip_picking">
        <xpath expr="//tr[@t-as='move']" position="inside">
            <t t-if="picking.valued and picking.sale_id and picking.move_line_ids">
                <t t-if="move.picking_id.state != 'done'">
                    <td class="text-right">
                        <span t-field="move.product_uom_qty"/>
                        <span t-field="move.product_uom_id"/>
                    </td>
                </t>
                <td class="text-right">
                    <span t-field="move.sale_price_unit"/>
                </td>
                <td class="text-right" groups="sale.group_discount_per_so_line">
                    <span t-field="move.sale_discount"/>
                </td>
                <td class="text-right">
                    <span t-field="move.sale_price_subtotal"/>
                </td>
                <td class="text-right">
                    <span t-field="move.sale_tax_description"/>
                </td>
            </t>
        </xpath>
    </template>

    <template id="valued_report_one_grouped_deliveryslip_pickings" inherit_id="stock_picking_group.report_one_grouped_deliveryslip_pickings">
        <xpath expr="//tr/td[@colspan='2']" position="attributes">
            <attribute name="colspan">7</attribute>
        </xpath>
        <xpath expr="//table[@class='table table-sm mt48']/thead/tr" position="inside">
            <t t-if="pickings.valued">
                <th class="text-right"><strong>Unit Price</strong></th>
                <th class="text-right" groups="sale.group_discount_per_so_line">
                    <strong>Discount</strong>
                </th>
                <th class="text-right"><strong>Subtotal</strong></th>
                <th class="text-right"><strong>Taxes</strong></th>
            </t>
        </xpath>
        <xpath expr="//table[@class='table table-sm mt48']" position="after">
            <t t-if="picking_group.valued">
                <table class="table table-condensed mt32">
                    <thead>
                        <tr>
                            <th class="text-right"><strong>Untaxed Amount</strong></th>
                            <th class="text-right"><strong>Taxes</strong></th>
                            <th class="text-right"><strong>Total</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-right">
                                <span t-field="picking_group.amount_untaxed"/>
                            </td>
                            <td class="text-right">
                                <span t-field="picking_group.amount_tax"/>
                            </td>
                            <td class="text-right">
                                <span t-field="picking_group.amount_total"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </xpath>
    </template>

</odoo>
